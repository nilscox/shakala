{
  "extends": "../../tsconfig.base.json",
  "references": [{ "path": "../0-shared" }, { "path": "../4-frontend-domain" }],
  "include": ["next-env.d.ts", "mocha.setup.ts", ".storybook/*", "src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": "src",
    "paths": {
      "shared": ["../../0-shared/src"],
      "shared/test": ["../../0-shared/src/index.test.ts"],
      "frontend-domain": ["../../4-frontend-domain/src"],
      "~/*": ["./*"]
    }
  }
}
