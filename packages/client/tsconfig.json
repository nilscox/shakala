{
  "references": [{ "path": "../shared/tsconfig.json" }],
  "include": ["src/**/*"],

  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "types": ["vite/client"]
  },

  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "moduleResolution": "Node16"
    }
  }
}
