{
  "name": "@shakala/backend-infrastructure",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "tsc -b && cp -r ./email-templates ./dist",
    "lint": "eslint src",
    "test": "NODE_NO_WARNINGS=1 NODE_ENV=test mocha",
    "start": "nodemon",
    "db:create": "mikro-orm database:create",
    "db:drop": "mikro-orm schema:drop --drop-db -r",
    "db:migrate": "mikro-orm migration:up",
    "db:clear": "mikro-orm migration:fresh",
    "db:seed": "ts-node src/persistence/utils/seed-db",
    "db:reset": "yarn db:clear && yarn db:seed"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/persistence/mikro-orm/mikro-orm.config.ts"
    ]
  },
  "mocha": {
    "require": [
      "./src/mocha.setup.ts"
    ]
  },
  "dependencies": {
    "@mikro-orm/core": "^5.6.3",
    "@mikro-orm/postgresql": "^5.6.3",
    "@mikro-orm/reflection": "^5.6.3",
    "bcrypt": "^5.1.0",
    "connect-pg-simple": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "handlebars": "^4.7.7",
    "mjml": "^4.13.0",
    "module-alias": "^2.2.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.8.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.6.3",
    "@mikro-orm/migrations": "^5.6.3",
    "@types/bcrypt": "^5.0.0",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/express-session": "^1.17.5",
    "@types/mjml": "^4.7.0",
    "@types/module-alias": "^2.0.1",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.7",
    "@types/supertest": "^2.0.12",
    "nodemon": "^2.0.20",
    "sql-formatter": "^11.0.2",
    "supertest": "^6.3.3",
    "tsconfig-paths": "^4.1.0"
  }
}
