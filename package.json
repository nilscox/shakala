{
  "name": "shakala",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@7.18.2",
  "scripts": {
    "run-one": "pnpm --stream --filter",
    "run-all": "pnpm --stream --filter './packages/*'",
    "clean": "pnpm run-all clean",
    "test": "pnpm run-all test",
    "lint": "pnpm run-all lint",
    "typecheck": "tsc -b",
    "spellcheck": "cspell --locale en,fr 'packages/*/src/**'",
    "start:backend": "pnpm run-one @shakala/backend-infrastructure start",
    "start:frontend": "pnpm run-one @shakala/frontend-client dev"
  },
  "devDependencies": {
    "@nilscox/expect": "^0.2.4",
    "@nilscox/expect-sinon": "^0.1.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "esbuild": "^0.16.17",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.31.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.4",
    "mocha": "^10.2.0",
    "prettier": "^2.8.2",
    "sinon": "^15.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
