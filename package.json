{
  "name": "shakala",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/0-shared",
    "packages/1-backend-domain",
    "packages/2-backend-application",
    "packages/3-backend-infrastructure",
    "packages/4-frontend-domain",
    "packages/5-frontend-client",
    "packages/6-e2e"
  ],
  "scripts": {
    "test": "yarn workspaces run test",
    "test:all": "yarn vitest",
    "lint": "yarn workspaces run lint",
    "spellcheck": "cspell --locale en,fr 'packages/*/src/**'",
    "build:backend": "yarn workspace backend-infrastructure build",
    "build:frontend": "yarn workspace shared build && yarn workspace frontend-client build",
    "build": "yarn build:backend && yarn build:frontend",
    "start:backend": "yarn workspace backend-infrastructure start",
    "start:frontend": "yarn workspace frontend-client start"
  },
  "devDependencies": {
    "@types/node": "^18.6.4",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-import-resolver-typescript": "^3.4.0",
    "eslint-plugin-import": "^2.26.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.8",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.22.0"
  }
}
