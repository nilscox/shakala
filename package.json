{
  "packageManager": "pnpm@8.3.0",
  "scripts": {
    "build": "tsc -b",
    "clean": "pnpm run -r clean",
    "lint": "pnpm --no-bail run -r lint",
    "test": "pnpm --no-bail --workspace-concurrency=1 run -r test",
    "typecheck": "tsc -b",
    "spellcheck": "cspell --locale en,fr 'packages/*/src/**'"
  },
  "devDependencies": {
    "@nilscox/expect": "0.3.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.41.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "npm:eslint-plugin-i@2.27.5-1",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4",
    "vite": "^4.3.8",
    "vitest": "^0.31.1"
  }
}
