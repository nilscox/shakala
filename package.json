{
  "name": "shakala",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/0-shared",
    "packages/1-backend-domain",
    "packages/2-backend-application",
    "packages/3-backend-infrastructure",
    "packages/4-frontend-domain",
    "packages/5-frontend-client",
    "packages/6-e2e"
  ],
  "scripts": {
    "clean": "yarn workspaces run clean",
    "test": "yarn workspaces run test",
    "lint": "yarn workspaces run lint",
    "spellcheck": "cspell --locale en,fr 'packages/*/src/**'",
    "build:shared": "yarn workspace @shakala/shared build",
    "build:backend": "yarn workspace @shakala/backend-infrastructure build",
    "build:frontend": "yarn workspace @shakala/shared build && yarn workspace @shakala/frontend-client build",
    "build": "yarn build:shared && yarn build:backend && yarn build:frontend",
    "typecheck": "yarn build:backend && yarn workspace @shakala/frontend-client tsc -b",
    "start:backend": "yarn workspace @shakala/backend-infrastructure start",
    "start:frontend": "yarn workspace @shakala/frontend-client dev"
  },
  "devDependencies": {
    "@nilscox/expect": "^0.2.4",
    "@nilscox/expect-sinon": "^0.1.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.4",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "esbuild": "^0.15.12",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.26.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "mocha": "^10.1.0",
    "sinon": "^14.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
